extends ../layout
block content
  h1 Edit User
  if errors
    each error in errors
      .alert.alert-danger= error
    form(action='/users/'+ user.id + '/edit', method='POST')
      div.mb-2
        label Email
        input.form-control(name='email' type='email' value=values ? values.email : "")
      div.mb-2
        label Password
        input.form-control(name='password' type='password')
      div.mb-2
        label Name
        input.form-control(name='name' value=values ? values.name : "")
      div.mb-2
        label Phone
        input.form-control(name='phone' value=values ? values.phone : "")
      button.btn.btn-primary(type='submit') Save
  else
    form(action='/users/'+ user.id + '/edit', method='POST')
      div.mb-2
        label Email
        input.form-control(name='email' type='email' value=user.email)
      div.mb-2
        label Password
        input.form-control(name='password' type='password')
      div.mb-2
        label Name
        input.form-control(name='name' value=user.name)
      div.mb-2
        label Phone
        input.form-control(name='phone' value=user.phone)
      button.btn.btn-primary(type='submit') Save