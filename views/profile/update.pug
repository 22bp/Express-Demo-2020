extends ../layout
block content
  h1 Update Profile
  if errors
    each error in errors
      .alert.alert-danger= error
    form(action='/profile/update', method='POST')
      div.mb-2
        label Name
        input.form-control(name='name' value=values ? values.name : "")
      div.mb-2
        label Phone
        input.form-control(name='phone' value=values ? values.phone : "")
      button.btn.btn-primary(type='submit') Update
  else
    form(action='/profile/update', method='POST')
      div.mb-2
        label Name
        input.form-control(name='name' value=user.name)
      div.mb-2
        label Phone
        input.form-control(name='phone' value=user.phone)
      button.btn.btn-primary(type='submit') Update