extends ../layout
block content
  h1 Add shop
  if errors
    each error in errors
      .alert.alert-danger= error
    form(action='/shops/add', method='POST')
      div.mb-2
        h2 Users
        select.form-control(name='user')
          option(disabled='', selected='') Choose user
          each user in users
            if values.user
              - var x = false
              if user.id == values.user
                - x = true
            option(value=user.id, selected=x ? '' : null) #{user.id} - #{user.name}
      div.mb-2
        h2 Name's shop
        input.form-control.toCapitalize(name='name' value=values ? values.name : "")
      button.btn.btn-primary(type='submit') Create
  else
    form(action='/shops/add', method='POST')
      div.mb-2
        h2 Users
        select.form-control(name='user')
          option(disabled='', selected='') Choose user
          each user in users
            option(value=user.id) #{user.id} - #{user.name}
      div.mb-2
        h2 Name's shop
        input.form-control.toCapitalize(name='name')
      button.btn.btn-primary(type='submit') Create