extends ../layout
block content
  h1 #{book.title}
  p
    img(src=book.coverUrl style="width: 300px;")
  p
    a.btn.btn-success(href='/cart/add/' + book.id) Add To Cart
  if book.shop
    p.toCapitalize Shop: 
      a(href="/shops/" + book.shop.id + "/books") #{book.shop.name}
  p Description: 
  p #{book.description}