extends ../layout
block content
  h1 Books
  form(action='/books', method='GET')
    input(name='q', placeholder="Enter book's name")
    button(type='submit') Search
  p
    a(href='/books/add') Add new
  table
    thead
      tr
        th Title
        th Actions
    tbody
      each book in books
        tr
          td #{book.title}
          td(class="actions")
            a(href='/books/' + book.id + '/view') View
            span 
            a(href='/books/' + book.id + '/edit') Edit
            span 
            a(href='/books/' + book.id + '/delete') Delete